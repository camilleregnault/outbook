<div class="container">
  <h1>My profil</h1>

  <h2>My places</h2>
  <% @places.each do |place| %>
  <div class="card-link d-flex justify-content-between p-2 m-0">

    <div class="card-product col-10">
        <%= link_to '', place_path(place), class: "stretched-link" %>
        <%= cl_image_tag place.photo, height: 650, width: 1400, crop: :fill %>
      <div class="card-product-infos">
        <h2><%= place["name"].capitalize %></h2>
        <p>On <strong><%= place["address"] %></strong></p>
        <% if @bookings_as_owner.where(params[:place_id] == place["id"]) && @bookings_as_owner.presence %>
        <p class="btn btn-primary"><em>Booked</em></p>
        <% end %>
      </div>
    </div>
    <div class="col-2 text-align-center">
      <% if policy(place).destroy? %>
        <%= link_to 'Delete', place, class: "btn btn-dark" ,method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to raw('<i class="far fa-edit"></i>'), edit_place_path(place.id), class: "btn btn-dark" %>
      <% end %>
    </div>

  </div>
  <% end %>

</div>
